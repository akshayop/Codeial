<li id="comment-<%= comment._id %>">
    <p>

        <% if(locals.user && (locals.user.id == comment.user.id || locals.user.id == i.user.id)) { %>

            <small>
                <a class="delete-comment-btn" href="/comments/destroy/<%= comment.id %>">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </small>

        <% } %>

        <%= comment.content %>
        
        <br>

        <small>
            <%= comment.user.name %>
        </small>

        <!-- display the likes of this comment, if the user is logged in, then show the link to toggle likes, else, just show the count -->
        
        <small>
            <% if(locals.user) { %>
                <a class="toggle-like-btn" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%= comment._id %>&type=Comment">

                    <%= comment.likes.length %> Likes
                </a>
            <% } 
            
            else {%>
                <%= comment.likes.length %> Likes
            <% } %>
        </small>
    </p>
    
</li>